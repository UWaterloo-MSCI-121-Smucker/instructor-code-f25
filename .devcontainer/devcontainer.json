{
  "name": "Classroom Environment (Copilot Disabled)",
  "customizations": {
    "vscode": {
      "settings": {
        "github.copilot.enable": false,
        "github.copilot.inlineSuggest.enable": false,
        "github.copilot.editor.enableAutoCompletions": false
      },
      "extensions": [
        "ms-python.vscode-pylance",
        "ms-python.python",
        "ms-python.debugpy",
        "ms-python.vscode-python-envs"
      ]
    }
  },
  "postCreateCommand": "mkdir -p $HOME/.vscode-server/data/Machine && echo '{ \"extensions.allowed\": [\"ms-python.vscode-pylance\", \"ms-python.python\", \"ms-python.debugpy\", \"ms-python.vscode-python-envs\"] }' > $HOME/.vscode-server/data/Machine/settings.json && pip install pytest"
}
